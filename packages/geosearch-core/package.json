{
  "name": "@opencage/geosearch-core",
  "version": "0.0.2",
  "description": "Core client for OpenCage GeoSearch",
  "author": {
    "name": "OpenCage GmbH",
    "url": "https://www.opencagedata.com"
  },
  "homepage": "https://github.com/OpenCageData/geosearch-sdk#readme",
  "keywords": [
    "opencgae",
    "geosearch",
    "geographic",
    "searches",
    "autocomplete",
    "autosuggest",
    "type-ahead",
    "predictions"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenCageData/geosearch-sdk.git"
  },
  "publishConfig": {
